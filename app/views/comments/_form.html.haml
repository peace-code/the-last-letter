%section#comment-form-section.navbar.navbar-fixed-bottom.navbar-inverse
  .container
    %div#comment-btn-show-form-box
      = link_to '추모의 글 남기기', '#', class: 'btn-show-form btn btn-primary btn-lg btn-block'

    %div#comment-form-box{ style: 'display: none' }
      = form_for @comment do |f|
        .form-group
          = f.label :nickname
          = f.text_field :nickname, class: 'form-control'

        .form-group
          = f.label :body
          = f.text_area :body, placeholder: '추모합니다...', class: 'form-control'

        .form-group
          = f.submit '추모의 글 남기기', class: 'btn btn-primary btn-lg btn-block'
